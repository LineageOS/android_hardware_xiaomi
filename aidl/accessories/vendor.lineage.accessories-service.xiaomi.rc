on boot
    # Xiaomi Mi Pad 5 keyboard
    chown root root /sys/devices/platform/soc/soc:xiaomi_keyboard/xiaomi_keyboard_conn_status
    chown root root /sys/devices/platform/soc/soc:xiaomi_keyboard/xiaomi_keyboard_connected
    chown root root /sys/devices/platform/soc/soc:xiaomi_keyboard/xiaomi_keyboard_enabled

    # Xiaomi Smart Pen
    chown root root /sys/touchpanel/pen

service vendor.accessories-default /vendor/bin/hw/vendor.lineage.accessories-service.xiaomi
    class hal
    user root
    group root
    shutdown critical
